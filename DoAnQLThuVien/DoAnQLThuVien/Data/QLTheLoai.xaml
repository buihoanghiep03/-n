<UserControl x:Class="DoAnQLThuVien.Data.QLTheLoai"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAnQLThuVien.Data"
             mc:Ignorable="d" 
             d:DesignHeight="780" d:DesignWidth="1300">
    <Grid Background="#FFF5F9FF">
        <!-- Header -->
        <Border Background="#FF21519E" Margin="0,0,0,730">
            <TextBlock Text="QUẢN LÝ THỂ LOẠI SÁCH" 
                       VerticalAlignment="Center" 
                       Margin="20,0"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"/>
        </Border>

        <!-- Main Content -->
        <Grid Margin="20,70,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- Search Section -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBox x:Name="timKiemTextBox" 
                         Width="382" Height="30" 
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FFB0B0B0"
                         Margin="0,0,10,0"/>

                <Button x:Name="timKiembtn" 
                        Content="Tìm kiếm" 
                        Width="100" Height="30"
                        Background="#FF21519E"
                        Foreground="White"
                        FontSize="13"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="timKiembtn_Click"/>

                <Button x:Name="resetbtn" 
                        Content="Làm mới" 
                        Width="100" Height="30"
                        Background="#FF607D8B"
                        Foreground="White"
                        FontSize="13"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="resetbtn_Click"/>
            </StackPanel>

            <!-- Form Controls -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Mã thể loại:" 
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="#FF444444"
                       Margin="0,0,10,0"/>

                <TextBox x:Name="maTLtxt" 
                         Grid.Column="1"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,20,0"
                         BorderBrush="#FFB0B0B0"/>

                <Label Content="Nhóm thể loại:" 
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="#FF444444"
                       Margin="0,0,10,0"/>

                <ComboBox x:Name="nhomTLcb" 
                         Grid.Column="3"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,218,0"
                         BorderBrush="#FFB0B0B0" Grid.ColumnSpan="3"/>
            </Grid>

            <Label Content="Tên thể loại:" 
                   Grid.Row="2"
                   VerticalAlignment="Top"
                   FontSize="14"
                   Foreground="#FF444444"
                   Margin="0,10,0,10"/>

            <TextBox x:Name="tenTLtxt" 
                     Grid.Row="2"
                     FontSize="14"
                     Margin="87,10,0,510"
                     HorizontalAlignment="Left"
                     Width="521"
                     BorderBrush="#FFB0B0B0"/>

            <Label Content="Mã tắt:"
                       VerticalAlignment="Top"
                       FontSize="14"
                       Foreground="#FF444444"
                       Margin="640,11,584,0" Grid.Row="2"/>

            <TextBox x:Name="maTattxt"
                         FontSize="14"
                         BorderBrush="#FFB0B0B0" Margin="714,9,262,511" Grid.Row="2"/>

            <!-- DataGrid -->
            <Border Grid.Row="2" 
                    BorderBrush="#FFE0E0E0" 
                    BorderThickness="1"
                    CornerRadius="5"
                    Background="White"
                    Margin="0,61,0,0">
                <DataGrid x:Name="datagrid" d:ItemsSource="{d:SampleData ItemCount=5}"
                          SelectionChanged="datagrid_SelectionChanged" 
                          AutoGenerateColumns="False"
                          Background="White" 
                          BorderThickness="0" 
                          RowHeight="40" 
                          ColumnHeaderHeight="40"
                          AlternationCount="2"
                          AlternatingRowBackground="#FFF5F5F5"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          ScrollViewer.CanContentScroll="True"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto">

                    <DataGrid.Resources>
                        <!-- Style cho Header -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF21519E"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>

                        <!-- Style cho Cell - Căn giữa nội dung -->
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Foreground" Value="#FF333333"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Grid Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!-- Style cho Selected Row -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFE3F2FD"/>
                                    <Setter Property="BorderBrush" Value="#FF90CAF9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã thể loại" 
                                           Binding="{Binding Id}" 
                                           Width="1*"
                                           IsReadOnly="True"/>

                        <DataGridTextColumn Header="Nhóm loại sách" 
                                           Binding="{Binding NhomLoaiSach}" 
                                           Width="2*"
                                           IsReadOnly="True"/>

                        <DataGridTextColumn Header="Thể loại" 
                                           Binding="{Binding TheLoai}" 
                                           Width="2*"
                                           IsReadOnly="True"/>

                        <DataGridTextColumn Header="Mã tắt" 
                                           Binding="{Binding MaTat}" 
                                           Width="1*"
                                           IsReadOnly="True"/>

                        <DataGridTextColumn Header="Số lượng sách" 
                                           Binding="{Binding SoLuongSach}" 
                                           Width="1*"
                                           IsReadOnly="True"/>

                        <!-- Cột Xóa với nút màu đỏ -->
                        <DataGridTemplateColumn Header="Thao tác" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="30" Height="30"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Background="#FFEB3B3B"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="Xóa"
                                            Click="DeleteButton_Click"
                                            Tag="{Binding Id}">
                                        <Image Source="/Images/Icons/deleted.png" Width="20" Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="thembtn" 
                        Content="Thêm" 
                        Width="100" Height="35"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontSize="14"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Cursor="Hand"
                        Click="thembtn_click"/>

                <Button x:Name="suabtn" 
                        Content="Sửa" 
                        Width="100" Height="35"
                        Background="#FF2196F3"
                        Foreground="White"
                        FontSize="14"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="suabtn_click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>