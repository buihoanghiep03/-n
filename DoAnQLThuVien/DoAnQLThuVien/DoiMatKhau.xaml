<Window x:Class="DoAnQLThuVien.DoiMatKhau"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAnQLThuVien"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Đổi mật khẩu" Height="600" Width="1024"
        Icon="pack://application:,,,/logo.ico">

    <Border CornerRadius="30" Background="#FF215A9A">
        <Grid>
            <!-- Phần hình ảnh bên trái -->
            <Border Width="512" CornerRadius="30,0,0,30" Background="#FF1A4B8C">
                <Image Source="/Images/Icons/backsite.jpg" Stretch="UniformToFill" Opacity="0.8" Margin="-257,0,257,0"/>
            </Border>

            <!-- Phần nội dung bên phải -->
            <Border Width="512" CornerRadius="0,30,30,0" Background="White" Margin="512,0,0,0">
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
                        <!-- Tiêu đề -->
                        <TextBlock Text="ĐỔI MẬT KHẨU" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#FF215A9A"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,40"/>

                        <!-- Mã Admin/Thủ thư -->
                        <TextBlock Text="Mã Admin - Mã thủ thư" 
                                   FontSize="14" 
                                   Foreground="#555555"
                                   Margin="5,0,0,5"/>

                        <Border CornerRadius="5" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="1">
                            <TextBox x:Name="maTTtxt"
                                     FontSize="14"
                                     Height="40"
                                     Padding="10"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#333333"
                                     CaretBrush="#FF215A9A"/>
                        </Border>

                        <!-- Mật khẩu mới -->
                        <TextBlock Text="Mật khẩu mới" 
                                   FontSize="14" 
                                   Foreground="#555555"
                                   Margin="5,15,0,5"/>

                        <Border CornerRadius="5" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="1">
                            <PasswordBox x:Name="moipb"
                                        FontSize="14"
                                        Height="40"
                                        Padding="10"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#333333"
                                        CaretBrush="#FF215A9A"
                                        KeyDown="PasswordBox_KeyDown"/>
                        </Border>

                        <!-- Xác nhận mật khẩu mới -->
                        <TextBlock Text="Xác nhận mật khẩu mới" 
                                   FontSize="14" 
                                   Foreground="#555555"
                                   Margin="5,15,0,5"/>

                        <Border CornerRadius="5" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="1">
                            <PasswordBox x:Name="xacNhanpb"
                                        FontSize="14"
                                        Height="40"
                                        Padding="10"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#333333"
                                        CaretBrush="#FF215A9A"
                                        KeyDown="PasswordBox_KeyDown"/>
                        </Border>

                        <!-- Nút đổi mật khẩu -->
                        <Button x:Name="doiMatKhaubtn"
                               Content="ĐỔI MẬT KHẨU" 
                               Height="45"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               Background="#FF215A9A"
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="doiMatKhaubtn_Click"
                               Margin="0,25,0,15">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF215A9A"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1A4B8C"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Nút quay lại -->
                        <Button x:Name="closebtn"
                                Content="QUAY LẠI" 
                                Width="120"
                                Height="35"
                                FontSize="13"
                                Foreground="White"
                                Background="#F44336"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="closebtn_Click"
                                HorizontalAlignment="Center">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#F44336"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D32F2F"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Logo hoặc thông tin thêm -->
                    <Image Source="/Images/Icons/logo.jpg"
                           Width="60" Height="73" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Top"
                           Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>